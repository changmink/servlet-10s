<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
        <display-name>10s</display-name>
        <servlet>
                <servlet-name>auth</servlet-name>
                <servlet-class>page.tens.servlet.AuthServlet</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>chatroom</servlet-name>
                <servlet-class>page.tens.servlet.ChatRoomServlet</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>friend</servlet-name>
                <servlet-class>page.tens.servlet.FriendServlet</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>message</servlet-name>
                <servlet-class>page.tens.servlet.MessageServlet</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>profile</servlet-name>
                <servlet-class>page.tens.servlet.ProfileServlet</servlet-class>
        </servlet>

        <servlet-mapping>
                <servlet-name>auth</servlet-name>
                <url-pattern>/api/auth</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>chatroom</servlet-name>
                <url-pattern>/api/chatroom</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>friend</servlet-name>
                <url-pattern>/api/friend</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>message</servlet-name>
                <url-pattern>/api/message</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>profile</servlet-name>
                <url-pattern>/api/profile</url-pattern>
        </servlet-mapping>
</web-app>